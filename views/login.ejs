<form class="form-horizontal" method="post" style="margin-right:30%">
    <div class="input-group input-group-lg" style="margin:15px">
        <span class="input-group-addon">用户名</span>
        <input type="text" class="form-control" placeholder="小于10个字母，数字，中文或组合" id="username" name="username">
    </div>
    <div class="input-group input-group-lg"  style="margin:15px">
        <span class="input-group-addon">密码</span>
        <input type="password" class="form-control" placeholder="小于15个字母，数字，中文或组合" id="password" name="password">
    </div>
    <div><button type="submit" class="btn btn-default " style="margin-left:auto;margin-right:auto">登录</button></div>
</form>
